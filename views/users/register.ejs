<%- include('../partials/head') %>    
<%- include('../partials/header') %>

    <main>
      <h2 class="register-bienvenidos">Bienvenidos a Solo Calzado!</h2>
      
      <h2 class="register-crea-cuenta">Crea tu cuenta gratis</h2>
      <div class="register-formulario">

        <form action="/users/register" method="POST" enctype="multipart/form-data" class="reg-form">
          
          <div>
            <label for="firstName">Nombre</label>
            <input type="text" name="firstName" id="firstName" 
            value="<%= !!locals.old&&!!old.firstName?(old.firstName):''%>"
            />
            <% if (locals.errors && errors.firstName) { %>
                  
              <p class="error-msg"><%= errors.firstName.msg %></p>      
              
            <% } %> 
          </div>
          <div>
            <label for="lastName">Apellido</label>
            <input type="text" name="lastName" id="lastName" 
            value="<%= !!locals.old&&!!old.lastName?(old.lastName):''%>"
            />
            <% if (locals.errors && errors.lastName) { %>
                  
              <p class="error-msg"><%= errors.lastName.msg %></p>      
              
            <% } %> 
          </div>
          <div>
            <label for="email">E-mail</label>
            <input type="email" name="email" 
            value="<%= !!locals.old&&!!old.email?(old.email):''%>"
            />
            <% if (locals.errors && errors.email) { %>
                  
              <p class="error-msg"><%= errors.email.msg %></p>      
              
            <% } %> 
          </div>

          <div>
            <label for="date">Fecha de nacimiento</label>
            <input type="date" name="bornDate" id="date"
            value="<%= !!locals.old&&!!old.bornDate?(old.bornDate):''%>"
            />
          </div>
          
          <!-- <div>
            <label for="gender">Selecciona tu género</label>
            <select name="gender" id="gender">
              <option value="Male">Masculino</option>
              <option value="Female">Femenino</option>
              <option value="Other">Otro</option>
            </select>
          </div> -->

          <div>
            <label for="user">Usuario</label>
            <input type="text" name="user" id="user"
            value="<%= !!locals.old&&!!old.user?(old.user):''%>"
            />
            <% if (locals.errors && errors.user) { %>
                  
              <p class="error-msg"><%= errors.user.msg %></p>      
              
            <% } %> 
          </div>
          <div>
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password"
  
            />
            <% if (locals.errors && errors.password) { %>
                  
              <p class="error-msg"><%= errors.password.msg %></p>      
              
            <% } %> 
          </div>

          <div>
            <label for="avatar">Selecciona tu avatar</label>
            <input type="file" name="avatar" id="avatar">
          </div>

          <!-- <div>
            <label for="usergender">Genero</label>
            <select name="usergender" id="usergender">                            
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>            
            </select>
          </div>   -->

          <!-- <div>
            <label for="usercategory">Categoria de Usuario</label>
            <select name="usercategory" id="usercategory">                            
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>            
            </select>
          </div>   -->
          
          <button class="register" type="submit">CREAR</button>
        </form>

      </div> 

    </main>

<%- include('../partials/footer') %>
