<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="userAccount">

<h2 class="register-bienvenidos"><%=user.firstName%> bienvenido a tu perfil!</h2>
 
<div class="img-container">
  <img src="/images/avatars/<%= user.avatar %>">
</div> 
  

<div class="register-formulario">
    <form action="/users/update" method="POST" enctype="multipart/form-data" class="reg-form">      
      <div>
        <label for="firstName">Nombre</label>
        <input type="text" name="firstName" id="firstName" disabled value="<%=user.firstName%>"/>       
      </div>
      <div>
        <label for="lastName">Apellido</label>
        <input type="text" name="lastName" id="lastName" disabled  value="<%=user.lastName%>"/>       
      </div>
      <div>
        <label for="email">E-mail</label>
        <input type="email" name="email" disabled value="<%=user.email%>"/>        
      </div>

      <div>
        <label for="date">Fecha de nacimiento</label>
        <input type="date" name="bornDate" id="date" disabled value="<%=user.bornDate%>"/>
      </div>
      
      <div>
        <label for="gender">Género</label>
        <select name="gender" id="gender" disabled>
          <option value="Male" <%= (user.gender == "Male")?"selected":"" %>>Masculino</option>
          <option value="Female" <%= (user.gender == "Female")?"selected":"" %>>Femenino</option>
          <option value="Other" <%= (user.gender == "Other")?"selected":"" %>>Otro</option>
        </select>
      </div>

      <div>
        <label for="user">Usuario</label>
        <input type="text" name="user" id="user" disabled value="<%=user.user%>"">        
      </div>
      <div>
        <label for="password">Contraseña</label>
        <input type="password" name="password" id="password" disabled value="Relleno">        
      </div>     
      
      <!-- <button class="userUpdate" type="submit">Actualizar</button> -->
    </form>   

  </div> 

</main>

<%- include('../partials/footer') %>