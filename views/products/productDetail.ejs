<%- include('../partials/head') %>    
<%- include('../partials/header') %>

    <main class="detalle-main">
        <!-- <section>
            <div class="detalle-titulo">Detalle del Producto</div>
        </section>    -->    

        <section>
        <article>
            <ul class="detalle-producto">
                <li class="detalle-imagen-container">
                    <img src="/images/products/<%= producto.image %>" alt="<%= producto.description %>">
                </li>
                <div class="detalle-resto-container-1">
                    <div class="detalle-minifoto">
                        <img src="/images/products/<%= producto.image %>" alt="<%= producto.description %>">
                    </div>
                    <div class="detalle-minifoto">
                        <img src="/images/products/<%= producto.image %>" alt="<%= producto.description %>">
                    </div>                    
                    <div class="detalle-minifoto">
                        <img src="/images/products/<%= producto.image %>" alt="<%= producto.description %>">
                    </div> 
                </div> 
               
                 <div class="detalle-resto-container-2">                    
    
<div class="tabContainer">
  <input class="radioTab" id="one" name="group" type="radio" checked>
  <input class="radioTab" id="two" name="group" type="radio">
  <input class="radioTab" id="three" name="group" type="radio">
  <div class="tabs">
    <label class="tab" id="one-tab" for="one">Descripcion</label>
    <label class="tab" id="two-tab" for="two">Categoria</label>
    <label class="tab" id="three-tab" for="three">Talles y Colores</label>
  </div>
  <div class="panels">
  <div class="panel" id="one-panel">
    <div class="panel-title">Descripcion</div>
    <br>
    <p> Marca: <%= producto.brand.name %> </p>
    <p><%= producto.description %></p>        
  </div>
  <div class="panel" id="two-panel">
    <div class="panel-title">Categoria</div>
    <br>
    <p>Genero: <%= producto.productgender.name %></p>
    <p>Precio: <%= producto.price %></p>
  </div>
  <div class="panel" id="three-panel">
    <div class="panel-title">Talles y Colores en Stock</div>
    <br> 
    <% 
    if (producto.productsizecolors.length > 0)
    {
    for (let i=0; i < producto.productsizecolors.length ; i++)
    { %>
                            Talle <%= sizes[producto.productsizecolors[i].size_id-1].num %>
                            Color <%= colors[producto.productsizecolors[i].color_id-1].name %>     
                            Stock <%= producto.productsizecolors[i].stock %>       
                            <br>
    <%   } } else { %>
    No hay Talles en Stock, lo sentimos mucho 
    <% } %>
  </div>
  </div>
</div>
                <% if (locals.logged) { %>
                   
                    <li class="detalle-botones-inferiores">
                        <form action="/products/productCartAddItem" method="POST">                                
                            <div class="detalle-botones-inferiores-subcontainer">                                
                                <button type="button" class="detalle-btn-black add_to_cart" data-id='<%=producto.id%>'> AGREGAR AL CARRITO </button>
                                <input type="hidden" name="product_title" class='product_title' data-title='<%=producto.title%>'>
                                </div>
                            <input type="hidden" name="id" id="hiddenId" value="<%=producto.id%>">
                        </form>

                        <div class="detalle-botones-inferiores-subcontainer">
                            <button class="detalle-btn-black"> AGREGAR A LA WISHLIST </button>                    
                        </div>
                    <% if (locals.loggedCategory > 1) { %>
                        
                        <div class="detalle-botones-inferiores-subcontainer">
                            <a href="/products/create/"><button class="detalle-btn-black"> CREAR </button></a>                        
                        </div>
                        <div class="detalle-botones-inferiores-subcontainer">
                            <a href="/products/edit/<%=producto.id%>"><button class="detalle-btn-black"> EDITAR </button></a>                        
                        </div>
                        <div class="detalle-botones-inferiores-subcontainer">
                            <form action="/products/<%= producto.id %>?_method=DELETE" method="POST">
                                <button type="submit" class="detalle-btn-black">ELIMINAR</button>
                            </form>
                        </div>
                    <% } %>
                    </li>                   
                    
                </div><% } %>
            </ul>
            
        </article>

    </main>

    <script src='/scripts/localStorage.js'></script>

<%- include('../partials/footer') %>